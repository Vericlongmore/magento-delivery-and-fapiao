<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <More_Mobile>
            <version>1.6.6</version><platform>ce</platform>
        </More_Mobile>
    </modules>
    <global>
        <blocks>
            <moremobile>
                <class>More_Mobile_Block</class>
            </moremobile>
        </blocks>
        <helpers>
            <moremobile>
                <class>More_Mobile_Helper</class>
            </moremobile>
        </helpers>
        <models>
            <moremobile>
                <class>More_Mobile_Model</class>
            </moremobile>
            <core>
                <rewrite>
                    <design_package>More_Mobile_Model_Core_Design_Package</design_package>
                </rewrite>
            </core>
            <catalog>
                <rewrite>
                    <design>More_Mobile_Model_Catalog_Design</design>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <moremobile_setup>
                <setup>
                    <module>More_Mobile</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </moremobile_setup>
            <moremobile_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </moremobile_write>
            <moremobile_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </moremobile_read>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <onsale>
                    <file>more_mobile.xml</file>
                </onsale>
            </updates>
        </layout>
        <events>
            <controller_front_init_before>
                <observers>
                    <moremobile_frontend_init>
                        <type>singleton</type>
                        <class>moremobile/observer</class>
                        <method>beforeFrontendInit</method>
                    </moremobile_frontend_init>
                </observers>
            </controller_front_init_before>
            <controller_action_predispatch>
                <observers>
                    <moremobile_predispatch>
                        <type>singleton</type>
                        <class>moremobile/observer</class>
                        <method>predispatch</method>
                    </moremobile_predispatch>
                </observers>
            </controller_action_predispatch>
            <customer_logout>
                <observers>
                    <moremobile_customer_logout>
                        <type>singleton</type>
                        <class>moremobile/observer</class>
                        <method>customerLogout</method>
                    </moremobile_customer_logout>
                </observers>
            </customer_logout>
        </events>
        <routers>
            <moremobile>
                <use>standard</use>
                <args>
                    <module>more_Mobile</module>
                    <frontName>moremobile</frontName>
                </args>
            </moremobile>
        </routers>
        <layout>
            <updates>
                <moremobile>
                    <file>moremobile.xml</file>
                </moremobile>
            </updates>
        </layout>
        <translate>
            <modules>
                <More_Mobile>
                    <files>
                        <default>More_Mobile.csv</default>
                    </files>
                </More_Mobile>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <moremobile>
                                            <title>aheadWorks - Mobile</title>
                                        </moremobile>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <More_Mobile>
                    <files>
                        <default>More_Mobile.csv</default>
                    </files>
                </More_Mobile>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <moremobile>
            <design>
                <icon>touch-icon.png</icon>
                <fullscreen>0</fullscreen>
                <default_logo>images/theme_logo.png</default_logo>
                <logo_alt></logo_alt>
            </design>
            <behaviour>
                <mobile_cache>1</mobile_cache>
                <switcher>1</switcher>
                <mobile_detect>1</mobile_detect>
                <always_switch_to_mobile_view>0</always_switch_to_mobile_view>
                <mobile_redirect>0</mobile_redirect>
            </behaviour>
        </moremobile>
    </default>
</config>
